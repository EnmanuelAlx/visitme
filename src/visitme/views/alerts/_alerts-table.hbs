<table class="table alerts">
  <tbody>
    {{#each (limit this 10)}}
      {{#if @first}}
        <div class="mt-3"></div>
      {{/if}}
      <tr>
        <td>
          {{#with author}}
            <img src="{{image}}" class="img-fluid">
          {{/with}}
        </td>
        <td>
          {{#with author}}
            <p class="mb-0">{{name}}</p>
          {{/with}}
        </td>
        <td>
          <h6>{{message}}</h6>
          <p class="mb-0">{{description}}</p>
        </td>
        <td>
          <p class="mb-0 small">
            {{formatTimeAgo created_at}}
          </p>
        </td>
      </tr>
    {{else}}
    <td>
      <p class="mb-0 mt-3">No hay alertas de este tipo registradas</p>
    </td>
   
    {{/each}}
  </tbody>
</table>